
<div class="container">
    <div class="row">
        <div class="genres-create">
            <h1>新規ジャンル作成</h1>
        <%= form_with model:@genre, url: admin_genres_path, local:true do |f| %>
            <div class="">
                <table>
                    <tr>
                        <td>ジャンル名</td>
                        <td><%= f.text_field :name %></td>
                        <td><%= f.submit "新規登録" %></td>
                    </tr>
                </table>
            </div>
        <% end %>
        </div>
        <div class="genres-index">
            <table>
                <tbody>
                    <tr><th>ジャンル</th></tr>
                    <% @genres.each do |genre| %>
                    <tr>
                        <td><%= genre.name %></td>
                        <td><%= link_to "編集", edit_admin_genre_path(genre.id) %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        
    </div>
</div>