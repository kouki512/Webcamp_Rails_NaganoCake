
<h1>商品新規登録</h1>
<%= form_with model: @item,url: admin_items_path, local:true do |f| %>
<table>
    <tbody>
        <tr>
            <td><%= f.label "商品写真" %></td>
            <td> <%= f.attachment_field :image %></td>
        </tr>
        <tr>
        <tr>
            <td><%= f.label "商品名" %></td>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <td><%= f.label "商品説明" %></td>
            <td><%= f.text_field :caption %></td>
        </tr>
            <td><%= f.label "ジャンル名" %></td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
        </tr>
        <tr>
            <td><%= f.label "税抜価格" %></td>
            <td><%= f.text_field :tax_excluded_price %>円</td>
        </tr>
        <tr>
            <td><%= f.label "販売ステータス" %></td>
           　<td>
           　    <%= f.label "販売中"%><%= f.radio_button :is_sales_active, :true %>
           　    <%= f.label "販売停止中" %> <%= f.radio_button :is_sales_active, :false %>
           　</td> 
             <td></td> 
        </tr>
        
            <td><%= f.submit "新規登録" %> </td>
    </tbody>
</table>
<% end %>