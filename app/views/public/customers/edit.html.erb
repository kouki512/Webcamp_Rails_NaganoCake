

<%= form_with model:@end_user, url: "/customers", method: :patch, local:true do |f| %>
<table>
    <tbody>
        <tr>
            <td><p>氏名</p></td>
            <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
        </tr>
        <tr>
            <td><p>カナ</p></td>
            <td><%= f.text_field :last_name_furigana %>　<%= f.text_field :first_name_furigana %></td>
        </tr>
        <tr>
            <td><p>郵便番号</p></td>
            <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
            <td><p>住所</p></td>
            <td><%= f.text_field :address %></td>
        </tr>
        <tr>
            <td><p>電話番号</p></td>
            <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
            <td><p>メールアドレス</p></td>
            <td><%= f.text_field :email %></td>
        </tr>
        <tr>
            <td><%= f.submit "編集内容を保存" %></td>
            <td><%= link_to "退会する",customers_confirm_path %></td>
        </tr>
    </tbody>
</table>
<% end %>